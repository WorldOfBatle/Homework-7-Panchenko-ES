<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Базовый стиль кнопки калькулятора -->
    <style name="CalcButton" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:layout_width">@dimen/size_zero</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_margin">@dimen/button_margin</item>
    </style>

    <style name="CalcButtonOp" parent="CalcButton">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CalcButtonEq" parent="CalcButtonOp">
        <item name="android:textSize">@dimen/button_eq_text_size</item>
    </style>
</resources>
